{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "requestId", "rp", "purpose", "claims", "proofBundle", "binding", "policyRef"],
  "properties": {
    "version": { "const": "v0" },
    "requestId": { "type": "string", "minLength": 1 },
    "rp": {
      "type": "object",
      "required": ["id", "audience"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "audience": { "type": "string", "minLength": 1 },
        "jurisdiction": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "purpose": { "type": "string", "minLength": 1 },
    "claims": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name", "value"],
        "properties": {
          "type": { "const": "predicate" },
          "name": { "type": "string", "minLength": 1 },
          "value": {}
        },
        "additionalProperties": false
      }
    },
    "proofBundle": {
      "type": "object",
      "required": ["format", "proof", "alg"],
      "properties": {
        "format": { "type": "string", "minLength": 1 },
        "proof": { "type": "string", "minLength": 1 },
        "disclosures": { "type": "array", "items": { "type": "string" } },
        "keyId": { "type": "string" },
        "credentialId": { "type": "string" },
        "alg": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "binding": {
      "type": "object",
      "required": ["nonce", "requestHash", "expiresAt"],
      "properties": {
        "nonce": { "type": "string", "minLength": 1 },
        "requestHash": { "type": "string", "minLength": 1 },
        "expiresAt": { "type": "string", "format": "date-time" }
      },
      "additionalProperties": false
    },
    "policyRef": { "type": "string", "minLength": 1 },
    "meta": {
      "type": "object",
      "properties": {
        "channel": { "type": "string" },
        "traceLevel": { "enum": ["minimal", "debug"] },
        "reAuthRecent": { "type": "boolean" },
        "reAuthMethod": { "enum": ["webauthn", "other"] },
        "reAuthAssertion": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
